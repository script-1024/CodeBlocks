<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CodeBlocks.Controls.BlockControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Canvas x:Name="RootCanvas" x:FieldModifier="public">
        <Path x:Name="BlockBorder" x:FieldModifier="public" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>

        <TeachingTip
            x:Name="BlockTip" x:FieldModifier="public"
            PreferredPlacement="Auto">
        </TeachingTip>
    </Canvas>
</UserControl>
