<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CodeBlocks.Controls.BlockControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Canvas>
        <Path x:Name="BlockBorder" x:FieldModifier="public" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
        <TextBlock x:Name="BlockDescription" x:FieldModifier="public" Foreground="White" FontSize="18" FontFamily="/Fonts/HarmonyOS_Sans_B.ttf#HarmonyOS Sans SC"/>
    </Canvas>
</UserControl>
