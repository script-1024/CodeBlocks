<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CodeBlocks.Pages.CodingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="using:CodeBlocks.Controls"
    NavigationCacheMode="Required"
    SizeChanged="Page_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ctrl:AppBar Grid.Row="0"/>
        <ScrollView x:Name="Scroller" Grid.Row="1">
            <Canvas x:Name="RootCanvas">
                <ctrl:CodeBlock x:Name="ghostBlock" BlockColor="Gray" Visibility="Collapsed"/>
                <Viewbox x:Name="TrashCan" Width="60" Height="60">
                    <SymbolIcon Symbol="Delete"/>
                </Viewbox>
            </Canvas>
        </ScrollView>
    </Grid>
</Page>
