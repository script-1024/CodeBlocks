<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CodeBlocks.Controls.ContentCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeBlocks.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="30,30,30,30"
    Height="72">

    <Border x:ConnectionId='2'
        x:Name="CardBorder"
        Background="#FFFFFF"
        BorderBrush="#E8E8E8"
        BorderThickness="1"
        CornerRadius="5">
        <StackPanel x:ConnectionId='3' x:Name="RootPanel" Orientation="Horizontal" VerticalAlignment="Center">
            <FontIcon x:ConnectionId='4' x:Name="Icon" Grid.Column="0" Margin="20,0,14,0" FontSize="21" Foreground="#202020" FontFamily="Segoe Fluent Icons" Visibility="Collapsed"/>
            <StackPanel
                Grid.Column="1"
                Margin="6,0,6,0"
                Orientation="Vertical">
                <TextBlock x:ConnectionId='5' x:Name="TitleTextBlock" Text="Title" FontFamily="Segoe UI Variable" FontSize="15" Foreground="Black"/>
                <TextBlock x:ConnectionId='6' x:Name="DescriptionTextBlock" Text="Description" FontFamily="Segoe UI Variable" FontSize="12" Foreground="Gray"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

