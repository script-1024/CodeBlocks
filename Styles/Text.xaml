<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        
        <!--Light Theme-->
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#1A1A1A"/>
            <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#5C5C5C"/>
            <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="#868686"/>
            <SolidColorBrush x:Key="TextFillColorDisabledBrush" Color="#9B9B9B"/>
        </ResourceDictionary>
        
        <!--Dark Theme-->
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#CCCCCC"/>
            <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="#969696"/>
            <SolidColorBrush x:Key="TextFillColorDisabledBrush" Color="#717171"/>
        </ResourceDictionary>
        
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
